<MyGridLayout>:

    GridLayout:
        cols:2
        size: root.width,root.height
        Label:
            text:"Car_Brand"
            font_size:15
        TextInput:
            id:Car_Brand
            multiline:False

        Label:
            text:"Fuel_type"
            font_size:15
        TextInput:
            id:Fuel_type
            multiline:False

        Label:
            text:"Body_type"
            font_size:15
        TextInput:
            id:Body_type
            multiline:False

        Label:
            text:"Colour"
            font_size:15
        TextInput:
            id:Colour
            multiline:False

        Button:
            text:"Submit"
            font_size:15
            on_press:root.press()